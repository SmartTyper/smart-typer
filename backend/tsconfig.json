{
  "extends": "../tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "common/*": ["common/*"],
      "data/*": ["data/*"],
      "exceptions/*": ["exceptions/*"],
      "services/*": ["services/*"],
      "validation-schemas/*": ["validation-schemas/*"]
    },
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "node",
    "pretty": true
  }
}
